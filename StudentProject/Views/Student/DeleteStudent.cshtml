<h2>Delete Student Information</h2>
<form asp-controller="Student" asp-action="RemoveStudent" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="@Model.Name" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" id="Email" asp-for="@Model.Email" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" asp-for="@Model.PhoneNumber" readonly/>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Delete</button>
        <button type="submit" class="btn btn-primary" asp-controller="Student" asp-action="StudentListing">Back</button>
    </div>
</form>

